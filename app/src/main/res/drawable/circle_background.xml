<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color of the circle -->
    <solid android:color="#E0E0E0" /> <!-- Light grey background, you can change this color -->

    <!-- Border around the circle -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Green border, you can change this color -->

    <!-- Optional padding inside the circle -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

</shape>
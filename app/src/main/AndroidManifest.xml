<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />



    <!-- Other activities here -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TollPay"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IntroActivity"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignUpActivity" />
        <service
            android:name=".SignUpActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <activity android:name=".MakePasswordActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ProfileActivity_Page" />
        <activity android:name=".setProfileImage" />
        <activity android:name=".PayTollActivity" />
        <activity android:name=".AddVehicle"/>
        <activity android:name=".EpayActivity"/>
        <activity android:name=".PayAmountActivity"/>
        <activity android:name=".PaymentSuccessfullPage"/>
        <activity android:name=".ProfileActivity"/>
        <activity android:name=".MyVehicles"/>
    </application>

</manifest>